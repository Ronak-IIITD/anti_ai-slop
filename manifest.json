{
  "manifest_version": 3,
  "name": "Anti-Slop - AI & Brainrot Content Blocker",
  "short_name": "Anti-Slop",
  "version": "1.2.2",
  "description": "Block low-quality, addictive content and AI-generated slop across YouTube, Instagram, Twitter, TikTok, Reddit, Google, LinkedIn, and news sites. Reclaim your focus.",
  "homepage_url": "https://github.com/Ronak-IIITD/anti_ai-slop",
  "offline_enabled": true,
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.instagram.com/*",
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "*://*.tiktok.com/*",
    "*://*.reddit.com/*",
    "*://*.google.com/*",
    "*://*.google.co.in/*",
    "*://*.linkedin.com/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["utils/storage.js", "utils/brainrot-patterns.js", "content-scripts/common.js", "content-scripts/youtube.js"],
      "css": ["content-scripts/youtube.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
      "js": ["utils/storage.js", "utils/brainrot-patterns.js", "content-scripts/common.js", "content-scripts/twitter.js"],
      "css": ["content-scripts/twitter.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["utils/storage.js", "utils/brainrot-patterns.js", "content-scripts/common.js", "content-scripts/reddit.js"],
      "css": ["content-scripts/reddit.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.google.com/*", "*://*.google.co.in/*"],
      "js": ["utils/storage.js", "utils/brainrot-patterns.js", "utils/utility-scorer.js", "content-scripts/common.js", "content-scripts/google.js"],
      "css": ["content-scripts/google.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["utils/storage.js", "utils/brainrot-patterns.js", "utils/utility-scorer.js", "content-scripts/common.js", "content-scripts/linkedin.js"],
      "css": ["content-scripts/linkedin.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["utils/storage.js", "utils/brainrot-patterns.js", "content-scripts/common.js", "content-scripts/instagram.js"],
      "css": ["content-scripts/instagram.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.tiktok.com/*"],
      "js": ["utils/storage.js", "utils/brainrot-patterns.js", "content-scripts/common.js", "content-scripts/tiktok.js"],
      "css": ["content-scripts/tiktok.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*/*"],
      "js": ["utils/storage.js", "utils/ai-patterns.js", "content-scripts/common.js", "content-scripts/ai-detector.js"],
      "css": ["content-scripts/ai-detector.css"],
      "run_at": "document_idle",
      "exclude_matches": [
        "*://*.youtube.com/*",
        "*://*.instagram.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.tiktok.com/*",
        "*://*.reddit.com/*",
        "*://*.linkedin.com/*",
        "*://*.google.com/*",
        "*://*.google.co.in/*",
        "*://*.github.com/*",
        "*://*.stackoverflow.com/*",
        "*://*.claude.ai/*",
        "*://*.anthropic.com/*",
        "*://*.openai.com/*",
        "*://*.chatgpt.com/*",
        "*://*.gemini.google.com/*",
        "*://*.copilot.microsoft.com/*",
        "*://*.perplexity.ai/*",
        "*://*.wikipedia.org/*",
        "*://*.wikimedia.org/*",
        "*://*.amazon.com/*",
        "*://*.amazon.in/*",
        "*://*.flipkart.com/*",
        "*://*.notion.so/*",
        "*://*.figma.com/*",
        "*://*.linear.app/*",
        "*://*.slack.com/*",
        "*://*.discord.com/*",
        "*://*.arxiv.org/*",
        "*://*.scholar.google.com/*",
        "*://*.netflix.com/*",
        "*://*.spotify.com/*",
        "*://*.gmail.com/*",
        "*://*.mail.google.com/*",
        "*://*.drive.google.com/*",
        "*://*.docs.google.com/*",
        "*://*.maps.google.com/*",
        "*://*.calendar.google.com/*",
        "*://*.whatsapp.com/*",
        "*://*.web.whatsapp.com/*",
        "*://*.leetcode.com/*",
        "*://*.hackerrank.com/*",
        "*://*.codeforces.com/*",
        "*://*.codechef.com/*",
        "*://*.coursera.org/*",
        "*://*.udemy.com/*",
        "*://*.khanacademy.org/*",
        "*://*.edx.org/*",
        "*://*.npmjs.com/*",
        "*://*.pypi.org/*",
        "*://*.developer.mozilla.org/*",
        "*://*.w3schools.com/*",
        "*://*.localhost/*",
        "*://localhost/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
